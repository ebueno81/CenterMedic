<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentCita">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="128dp"
            android:layout_height="69dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:text="Crear
            Cita"
            android:textColor="@color/green"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="520dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/tvNombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Nombres"
                android:textColor="@color/material_dynamic_neutral40"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNombrePaciente"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editext_background"
                android:ems="10"
                android:hint="Ingresa tu Nombre"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#707070"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Apellidos"
                android:textColor="@color/material_dynamic_neutral40"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvApePat"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/editext_background"
                    android:ems="10"
                    android:hint="Apellido Paterno"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tvApeMat"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/editext_background"
                    android:ems="10"
                    android:hint="Apellido Materno"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDni1"
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Especialidad"
                        android:textColor="@color/material_dynamic_neutral40"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvEspecialidad"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editext_background"
                        android:ems="10"
                        android:hint="Especialidad"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="#707070"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNaci2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Doctor"
                        android:textColor="@color/material_dynamic_neutral40"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMedico"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editext_background"
                        android:ems="10"
                        android:hint="Doctor"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="#707070"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCelular"
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Fecha"
                        android:textColor="@color/material_dynamic_neutral40"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFecha"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editext_background"
                        android:ems="10"
                        android:hint="Fecha"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="#707070"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Horario"
                        android:textColor="@color/material_dynamic_neutral40"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvHora"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editext_background"
                        android:ems="10"
                        android:hint="Horario"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="#707070"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Consultorio"
                android:textColor="@color/material_dynamic_neutral40"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvConsultorio"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editext_background"
                android:ems="10"
                android:hint="Consultorio"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#707070"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="10dp"

                android:background="@drawable/button_background"
                android:text="Regresar"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>